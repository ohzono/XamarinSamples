<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PrismRxApi.Views.ListItemPage">
    <StackLayout>
        <Label Text="{Binding Id.Value}"/>
        <Entry Text="{Binding Name.Value}"/>
        <Entry Text="{Binding Salary.Value}"/>
        <Entry Text="{Binding Age.Value}"/>
        <!--<Image Source="{Binding ProfileImage.Value}"/>-->
        <Button Text="Save" Command="{Binding Update}"/>
    </StackLayout>
  
</ContentPage>